<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />

  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{84f37652-8f9b-468c-910f-5188488482ec}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>DynamoPilot.Zero</RootNamespace>
    <AssemblyName>PilotNodes</AssemblyName>
    <TargetFramework>net481</TargetFramework>
    <FileAlignment>512</FileAlignment>
    <Deterministic>true</Deterministic>
    <AssemblyProduct>DynamoPilot.Zero</AssemblyProduct>
    <Product>DynamoPilot.Zero</Product>
    <Description>DynamoPilot.Zero</Description>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <UseWPF>true</UseWPF>
    <LangVersion>10.0</LangVersion>

    <!-- Не копируем зависимости NuGet в папку вывода -->
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <WarningLevel>4</WarningLevel>
    <StartAction>Program</StartAction>
    <StartProgram>C:\Program Files\ASCON\Pilot-BIM\Ascon.Pilot.PilotBIM.exe</StartProgram>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <!-- Пути к папкам для дебага -->
  <PropertyGroup>
    <AppData>$(USERPROFILE)\AppData\Local</AppData>
    <UserDirectoryPathBIM>$(AppData)\ASCON\Pilot-BIM\Development\DynamoPilot.App\packages\DynamoPilot\bin</UserDirectoryPathBIM>
    <UserDirectoryPathICE>$(AppData)\ASCON\Pilot-ICE Enterprise\Development\DynamoPilot.App\packages\DynamoPilot\bin</UserDirectoryPathICE>
    <BaseOutputPath>..\bin\</BaseOutputPath>
  </PropertyGroup>

  <!-- Копируем только основную библиотеку (и pdb) -->
  <Target Name="CopyToDebugDirectory" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <MakeDir Directories="$(UserDirectoryPathBIM)" Condition="!Exists('$(UserDirectoryPathBIM)')" />
    <MakeDir Directories="$(UserDirectoryPathICE)" Condition="!Exists('$(UserDirectoryPathICE)')" />

    <ItemGroup>
      <FilesToCopy Include="$(OutputPath)$(AssemblyName).dll;$(OutputPath)$(AssemblyName).pdb" />
    </ItemGroup>

    <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(UserDirectoryPathBIM)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(UserDirectoryPathICE)" SkipUnchangedFiles="true" />
  </Target>

  <!-- Создаём архив только с основной библиотекой -->
  <Target Name="CreateZip" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="powershell -Command &quot;Compress-Archive -Path $(OutputPath)$(AssemblyName).dll -DestinationPath $(OutputPath)..\$(AssemblyProduct).zip -Force&quot;" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Ascon.Pilot.SDK" Version="25.9.0" />
    <PackageReference Include="DynamoVisualProgramming.Core" Version="2.16.4.10216" />
    <PackageReference Include="DynamoVisualProgramming.WpfUILibrary" Version="2.16.4.10216" />
    <PackageReference Include="System.Reactive" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DynamoPilot.App\DynamoPilot.App.csproj" />
    <ProjectReference Include="..\DynamoPilot.Data\DynamoPilot.Data.csproj" Private="False" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.Composition" />
  </ItemGroup>

</Project>